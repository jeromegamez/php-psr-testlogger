{
    "name": "gamez/psr-testlogger",
    "description": "PSR-3 compliant test logger for developers who like tests and want to check if their application logs messages as they expect.",
    "keywords": ["psr", "psr-3", "log", "test", "tests", "phpunit"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {"name": "Jérôme Gamez", "email": "jerome@gamez.name"}
    ],
    "require": {
        "php": "^7.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "friendsofphp/php-cs-fixer": "^2.3"
    },
    "provide": {
        "psr/log-implementation": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Gamez\\Psr\\Log\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gamez\\Psr\\Log\\": "tests"
        }
    },
    "config": {
        "platform": {
            "php": "7.0"
        }
    }
}
